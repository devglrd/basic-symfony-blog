{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>Inscription</h1>
                        <span class="subheading"></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <form method="post" class="container mt-5" action="{{ path('store_register') }}">
        {#{% if error %}#}
        {#<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
        {#{% endif %}#}

        <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" value="" name="email" id="inputEmail" class="form-control mb-3"
               placeholder="Email" required autofocus>
        <label for="inputPassword" class="sr-only">Name</label>
        <input type="text" name="name" id="inputPassword" class="form-control mb-3" placeholder="Name"
               required>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control mb-3" placeholder="Password"
               required>
        <label for="inputPassword" class="sr-only">Confirm Password</label>
        <input type="password" name="confirm_password" id="inputPassword" class="form-control mb-3"
               placeholder="Password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Register
        </button>
        <a href="{{ path('app_login') }}">or login</a>
    </form>
{% endblock %}
